<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
	Name="UIML"
	Version="8.00"
	>
	<Rules>
		<CustomBuildRule
			Name="UIML"
			DisplayName="UIML"
			CommandLine="$(KLAYGEHOME)\Tools\uimlc\uimlc.py $(InputPath) [OutputDir]\$(InputName).kui"
			Outputs="[OutputDir]\$(InputName).kui"
			FileExtensions="*.uiml"
			ExecutionDescription="Compiling $(InputPath)"
			>
			<Properties>
				<StringProperty
					Name="OutputDir"
					DisplayName="Output Directory"
					Description="Specifies the output directory"
					DefaultValue="$(InputDir)"
					Switch="[value]"
				/>
			</Properties>
		</CustomBuildRule>
	</Rules>
</VisualStudioToolFile>
