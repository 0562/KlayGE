<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
	Name="FXML"
	Version="8.00"
	>
	<Rules>
		<CustomBuildRule
			Name="FXML"
			DisplayName="FXML"
			CommandLine="$(KLAYGE_HOME)\Tools\fxmlc\fxmlc.py $(InputPath) [OutputDir]\$(InputName).kfx"
			Outputs="[OutputDir]\$(InputName).kfx"
			FileExtensions="*.fxml"
			ExecutionDescription="Compiling $(InputPath)"
			>
			<Properties>
				<StringProperty
					Name="OutputDir"
					DisplayName="Output Directory"
					Description="Specifies the output directory"
					DefaultValue="$(InputDir)"
					Switch="[value]"
				/>
			</Properties>
		</CustomBuildRule>
	</Rules>
</VisualStudioToolFile>
